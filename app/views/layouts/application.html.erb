<!DOCTYPE html>
<html>
  <head>
    <title>Cafeteria</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link
       href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
       rel="stylesheet"
       type="text/css"
     />
  
    </head>

  <body>
  <% if @current_user %>

  <div class="NavBar">
    <ul class="NavBar-items">
      <% if @current_user.role == 'owner' %>
        <%= link_to "Pending-orders", orders_path, method: "get", class:'NavBar-content' %>
      <% end %>
      <%= link_to "My Cart", show_cart_path, method: "get", class:"NavBar-content" %>
      <%= link_to "Sign-out", destroy_session_path, method: "delete", class:"NavBar-content" %>
      <i class="fa fa-user"></i>
    </ul>
  </div>
  <% end %>
  <%= yield %>
  </body>
</html>
