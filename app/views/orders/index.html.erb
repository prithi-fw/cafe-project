<article>
   <p style="font-size:xx-large;margin:20px;">Orders To be delivered</p>
   <section>
     <table>
     <tr class="Table-header">
       <th>Deliver</th>
       <th>User Name</th>
       <th>User Id</th>
       <th>Order Id</th>
     </tr>
     <% @orders.all.each do |order| %>
       <li class="Orders">
         <label class="Orders-container">
           <tr>
             <td><%= form_with(url: order_path(order.id), method:"put") do %>
               <%= check_box_tag 'delivered', '1', checked = false, onclick: 'this.form.submit()' %>
             <% end %></td>
             <td><p class="Order-user-name"> <%= order.user.first_name %> </p></td>
             <td><p class="Order-user-id"> <%= order.user.id %> </p></td>
             <td><p class="Order-id"> <%= order.id %> </p></td>
           </tr>
         </label>
       </li>
     <% end %>
   </section>
 </article>
