<article>
   <p style="font-size:xx-large;margin:20px;">Orders To be delivered</p>
   <section>
     
     <% @orders.all.each do |order| %>
       <li class="Orders">
         <label class="Orders-container">
         <% order.order_items.each do |order_item| %>
          <p><%= order_item.menu_item_name%></p>
          <p><%= order_item.menu_item_price%></p>
          <p><%= order_item.quantity %></p>
          <p><%= order_item.price %></p>
        <% end %>
       </li>
     <% end %>
   </section>
 </article>
